@model IEnumerable<Domain.Entities.Community>

<div class="card mb-4">
    <div class="card-header">
        <div class="container-fluid px-0">
            <div class="row align-items-center position-relative">
                <div class="col-md-8 mb-4 mb-md-0">
                    <h5 class="mb-0">Communities</h5>
                </div>
                <div class="col-md-4 text-md-end">
                    <button class="btn text-white" style="background-color: #2A3F54;" onclick="EditRecord(0, '/Community/_Create','#AddCommunity','#CommunityForm')"><i class="fa fa-plus" aria-hidden="true"></i> New Community</button>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row justify-content-between align-items-center">
            <div class="col">
                <div class="row align-items-center">
                    <table class="table tableDt">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    URL
                                </th>
                             
                                <th class="all">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Url)
                                    </td>
                                  
                                    <td>
                                        <div>
                                            <a style="cursor:pointer;" onclick="EditRecord(@item.id, '/Community/_Create', '#AddCommunity', '#CommunityForm')"> <i class="fas fa-pen" style="color: #162168; font-size:initial;"></i></a>
                                            <a style="cursor:pointer;" onclick="DeleteRecord(@item.id, '/Community/Delete')"><i class="fa fa-times-circle fa-lg text-danger"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

<!--CREATE MODAL-->

<div class="modal fade" id="AddCommunity" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <form id="CommunityForm" asp-action="Create" asp-controller="Community" data-ajax="true" data-ajax-method="post" data-ajax-complete="DuplicateCommunity">
    </form>
</div>

<partial name="~/Views/Shared/_DeleteModal.cshtml">
